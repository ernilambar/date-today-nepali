{
  "name": "date-today-nepali",
  "title": "Date Today Nepali",
  "version": "2.5.4",
  "license": "GPL-2.0+",
  "main_file": "date-today-nepali.php",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernilambar/date-today-nepali"
  },
  "scripts": {
    "dev": "wp-scripts start --webpack-src-dir=gb-block --output-path=build",
    "build": "wp-scripts build --webpack-src-dir=gb-block --output-path=build",
    "version": "easy-replace-in-files",
    "textdomain": "wpi18n addtextdomain --exclude=vendor,deploy,node_modules",
    "pot": "composer run-script pot",
    "prewpdeploy": "pnpm run deploy",
    "wpdeploy": "wp-deployer",
    "prerelease": "pnpm run deploy",
    "release": "dotenv release-it -- --no-git --no-npm --no-increment",
    "predeploy": "shx rm -rf vendor/ && composer install --no-dev --no-scripts -o && shx rm -rf build/ && pnpm run build",
    "deploy": "shx rm -rf deploy/ && shx mkdir deploy && copy-files-from-to --silent && cd deploy/ && cross-var shx mv temp $npm_package_name && cross-var bestzip ../$npm_package_name.zip * && cd .. && cross-var shx mv $npm_package_name.zip deploy/"
  },
  "wpDeployer": {
    "repoType": "plugin",
    "username": "rabmalin",
    "buildDir": "deploy/date-today-nepali",
    "deployAssets": false
  },
	"release-it": {
		"github": {
			"release": true,
			"changelog": false,
			"releaseName": "${version}",
			"assets": ["deploy/*.zip"]
		}
	},
  "devDependencies": {
    "@wordpress/scripts": "^26.4.0",
    "@wordpress/server-side-render": "^4.10.0",
    "bestzip": "^2.2.1",
    "copy-files-from-to": "^3.9.0",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^7.2.1",
    "easy-replace-in-files": "^1.0.3",
    "node-wp-i18n": "^1.2.7",
    "release-it": "^15.10.3",
    "shx": "^0.3.4",
    "wp-deployer": "^1.0.3"
  }
}
