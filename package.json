{
	"name": "date-today-nepali",
	"title": "Date Today Nepali",
	"version": "2.5.4",
	"license": "GPL-2.0+",
	"main_file": "date-today-nepali.php",
	"repository": {
		"type": "git",
		"url": "https://github.com/ernilambar/date-today-nepali"
	},
	"scripts": {
		"dev": "wp-scripts start --webpack-src-dir=gb-block --output-path=build",
		"build": "wp-scripts build --webpack-src-dir=gb-block --output-path=build",
		"format:json": "wp-scripts format composer.json package.json",
		"version": "easy-replace-in-files",
		"textdomain": "wpi18n addtextdomain --exclude=vendor,deploy,node_modules",
		"prepare": "composer install",
		"pot": "composer run-script pot",
		"prewpdeploy": "bun run deploy",
		"wpdeploy": "wp-deployer",
		"prerelease": "bun run deploy",
		"release": "dotenv release-it -- --no-git --no-npm --no-increment",
		"ready:build": "shx rm -rf build/ && bun run build",
		"ready:vendor": "shx rm -rf vendor/ && composer install --no-dev --no-scripts -o",
		"predeploy": "bun run ready:vendor && bun run ready:build",
		"deploy": "packtor"
	},
	"packtor": {
		"files": [
			"**/*",
			"!*.json",
			"!*.lock",
			"!*.lockb",
			"!*.yaml"
		]
	},
	"wpDeployer": {
		"repoType": "plugin",
		"username": "rabmalin",
		"buildDir": "deploy/date-today-nepali",
		"deployAssets": false
	},
	"release-it": {
		"github": {
			"release": true,
			"changelog": false,
			"releaseName": "${version}",
			"assets": [
				"deploy/*.zip"
			]
		}
	},
	"devDependencies": {
		"@wordpress/scripts": "^26.5.0",
		"@wordpress/server-side-render": "^4.11.0",
		"dotenv-cli": "^7.2.1",
		"easy-replace-in-files": "^1.0.3",
		"node-wp-i18n": "^1.2.7",
		"packtor": "^1.0.2",
		"release-it": "^15.10.3",
		"shx": "^0.3.4",
		"wp-deployer": "^1.0.3"
	}
}
