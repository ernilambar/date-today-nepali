{
  "name": "date-today-nepali",
  "title": "Date Today Nepali",
  "version": "2.3.9",
  "license": "GPL-2.0+",
  "main_file": "date-today-nepali.php",
	"repository": {
		"type": "git",
		"url": "https://codeberg.org/ernilambar/date-today-nepali"
	},
  "scripts": {
    "version": "grunt version",
    "preinstall": "npx only-allow pnpm",
    "prewpdeploy": "gulp deploy",
    "pot": "wpi18n makepot --domain-path=languages --exclude=vendor,deploy,node_modules",
    "textdomain": "wpi18n addtextdomain --exclude=vendor,deploy,node_modules",
    "wpdeploy": "grunt wpdeploy",
    "deploy": "shx rm -rf deploy/ && shx mkdir deploy && copy-files-from-to --config .copyfiles.json && cd deploy/ && bestzip ../date-today-nepali.zip * && cd .. && shx mv date-today-nepali.zip deploy/"
  },
  "devDependencies": {
    "bestzip": "^2.2.1",
    "copy-files-from-to": "^3.2.2",
    "grunt": "^1.5.3",
    "grunt-replace": "^2.0.2",
    "grunt-wp-deploy": "^2.1.2",
    "node-wp-i18n": "^1.2.6",
    "shx": "^0.3.4"
  }
}
