{
	"name": "ernilambar/date-today-nepali",
	"description": "Date Today Nepali",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": "^7.0 || ^8.0",
		"ernilambar/nepali-date": "^1.0",
		"ernilambar/wp-admin-notice": "^1.0",
		"ernilambar/wp-welcome": "^1.0"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"DateTodayNepali\\": "app/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"ergebnis/composer-normalize": true
		},
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"scripts": {
		"phpcs": [
      "composer --working-dir=devtools update --no-interaction",
      "devtools/vendor/bin/phpcs --standard=.phpcs.xml.dist"
    ],
		"phpcbf": [
      "composer --working-dir=devtools update --no-interaction",
      "devtools/vendor/bin/phpcbf --standard=.phpcs.xml.dist"
    ],
		"compat": [
      "composer --working-dir=devtools update --no-interaction",
      "devtools/vendor/bin/phpcs --standard=.phpcompat.xml.dist"
    ],
		"pot": [
      "composer --working-dir=devtools update --no-interaction",
      "wp i18n make-pot . --exclude=build,deploy,node_modules,vendor --headers='{\"POT-Creation-Date\":\"\"}'"
    ],
		"test": [
			"@phpcs",
			"@compat"
		]
	}
}
