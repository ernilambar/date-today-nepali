{
	"name": "ernilambar/date-today-nepali",
	"description": "Date Today Nepali",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": "^7.0 || ^8.0",
		"ernilambar/nepali-date": "^1.0",
		"ernilambar/wp-admin-notice": "^1.0",
		"ernilambar/wp-welcome": "^2.0"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"DateTodayNepali\\": "app/"
		}
	},
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true
		},
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"scripts": {
		"lint": [
			"@lint-php",
			"@phpcs"
		],
		"lint-php": [
			"composer --working-dir=devtools update --no-interaction",
			"devtools/vendor/bin/parallel-lint --colors --exclude .git --exclude vendor --exclude node_modules --exclude devtools --exclude deploy ."
		],
		"phpcbf": [
			"composer --working-dir=devtools update --no-interaction",
			"devtools/vendor/bin/phpcbf --standard=.phpcs.xml.dist"
		],
		"phpcs": [
			"composer --working-dir=devtools update --no-interaction",
			"devtools/vendor/bin/phpcs --standard=.phpcs.xml.dist --severity=8"
		],
		"pot": [
			"composer --working-dir=devtools update --no-interaction",
			"devtools/vendor/bin/wp i18n make-pot . --exclude=build,deploy,node_modules,vendor --headers='{\"POT-Creation-Date\":\"\"}'"
		]
	}
}
